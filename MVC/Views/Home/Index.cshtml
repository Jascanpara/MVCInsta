@model IEnumerable<MVC.Models.Amigo>

<h2>Usuarios</h2>

@if (Model.Any())
{
    <div class="container">
        <br />
        <div style="width:90%; margin:0 auto;">
            <table class="table table-striped table-bordered">
				<tr>
					<th>Nombre</th>
					<th>Telefono</th>
					<th>Usuario</th>
					<th>Frase</th>
					<th></th>

				</tr>
                @foreach (var item in Model)
                {
			<tr>
				<td>@item.nombre</td>
				<td>@item.telefono</td>
				<td>@item.usuario</td>
				<td>@item.frase</td>
				<td> @Html.ActionLink("Perfil", "Perfil1", new { i = item.usuario })</td>
			</tr>
                }
            </table>
        </div>
    </div>

}
else
{
    <h3>No hay elementos para mostrar</h3>
}